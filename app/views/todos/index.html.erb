<h1>Todos</h1>
<%= link_to 'New todo', new_todo_path %>
<ul class="todo">
  <% @todos.each do |todo| %>
    <li class="<%= 'completed' if todo.completed?%>"> 
      <%= todo.title %>
      <%= button_to 'Completed', todo_completion_path(todo)  unless todo.completed? %>  
      <%= button_to 'Not Completed', todo_completion_path(todo), method: :delete  if todo.completed? %>        
    </li>
  <% end %>
</ul>
